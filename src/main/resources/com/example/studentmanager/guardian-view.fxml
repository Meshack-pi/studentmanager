<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentmanager.GuardianController">
   <top>
      <VBox>
         <Label text="Guardian Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
         </Label>
         <Separator/>
      </VBox>
   </top>
   <left>
      <VBox spacing="10" minWidth="200">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Label text="Select Child" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
         <ComboBox fx:id="childCombo" prefWidth="180" promptText="Select Child" onAction="#handleChildSelection"/>
         <Separator/>
         <Label text="Fee Information" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
         <Label fx:id="feeAmountLabel" text="Total Amount: -"/>
         <Label fx:id="feePaidLabel" text="Paid: -"/>
         <Label fx:id="feeBalanceLabel" text="Balance: -"/>
         <Label fx:id="feeDueDateLabel" text="Due Date: -"/>
      </VBox>
   </left>
   <center>
      <VBox spacing="10">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Label text="Child's Marks" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
         <TableView fx:id="marksTable" prefHeight="400">
            <columns>
               <TableColumn fx:id="guardianCourseColumn" text="Course" prefWidth="200"/>
               <TableColumn fx:id="guardianCat1Column" text="CAT 1" prefWidth="80"/>
               <TableColumn fx:id="guardianCat2Column" text="CAT 2" prefWidth="80"/>
               <TableColumn fx:id="guardianCat3Column" text="CAT 3" prefWidth="80"/>
               <TableColumn fx:id="guardianFinalColumn" text="Final Exam" prefWidth="100"/>
               <TableColumn fx:id="guardianGradeColumn" text="Overall Grade" prefWidth="120"/>
            </columns>
         </TableView>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Button text="Logout" onAction="#logout"/>
      </HBox>
   </bottom>
</BorderPane>

