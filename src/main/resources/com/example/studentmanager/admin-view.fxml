<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.studentmanager.AdminController">
   <top>
      <VBox>
         <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;">
            <padding>
               <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
         </Label>
         <Separator/>
      </VBox>
   </top>
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Create Account">
               <VBox spacing="10">
                  <padding>
                     <Insets top="10" right="10" bottom="10" left="10"/>
                  </padding>
                  <Label text="Create New Account" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                  
                  <HBox spacing="10">
                     <Label text="Account Type:" minWidth="120"/>
                     <ComboBox fx:id="accountTypeCombo" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Username:" minWidth="120"/>
                     <TextField fx:id="usernameField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Password:" minWidth="120"/>
                     <PasswordField fx:id="passwordField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Name:" minWidth="120"/>
                     <TextField fx:id="nameField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Email:" minWidth="120"/>
                     <TextField fx:id="emailField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="ID:" minWidth="120"/>
                     <TextField fx:id="idField" prefWidth="200" promptText="Student/Lecturer/Guardian ID"/>
                  </HBox>
                  
                  <Button text="Create Account" onAction="#handleCreateAccount" prefWidth="200"/>
                  <Label fx:id="accountMessageLabel" textFill="green"/>
               </VBox>
            </Tab>
            
            <Tab text="Link Guardian to Student">
               <VBox spacing="10">
                  <padding>
                     <Insets top="10" right="10" bottom="10" left="10"/>
                  </padding>
                  <Label text="Link Guardian to Student" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                  
                  <HBox spacing="10">
                     <Label text="Guardian ID:" minWidth="120"/>
                     <ComboBox fx:id="guardianIdCombo" prefWidth="200" promptText="Select Guardian"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Student ID:" minWidth="120"/>
                     <ComboBox fx:id="studentIdCombo" prefWidth="200" promptText="Select Student"/>
                  </HBox>
                  
                  <Button text="Link" onAction="#handleLinkGuardian" prefWidth="200"/>
                  <Label fx:id="linkMessageLabel" textFill="green"/>
               </VBox>
            </Tab>
            
            <Tab text="Create Course">
               <VBox spacing="10">
                  <padding>
                     <Insets top="10" right="10" bottom="10" left="10"/>
                  </padding>
                  <Label text="Create New Course" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                  
                  <HBox spacing="10">
                     <Label text="Course ID:" minWidth="120"/>
                     <TextField fx:id="courseIdField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Course Name:" minWidth="120"/>
                     <TextField fx:id="courseNameField" prefWidth="200"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Course Code:" minWidth="120"/>
                     <TextField fx:id="courseCodeField" prefWidth="200"/>
                  </HBox>
                  
                  <Button text="Create Course" onAction="#handleCreateCourse" prefWidth="200"/>
                  <Label fx:id="courseMessageLabel" textFill="green"/>
               </VBox>
            </Tab>
            
            <Tab text="Allocate Lecturer to Course">
               <VBox spacing="10">
                  <padding>
                     <Insets top="10" right="10" bottom="10" left="10"/>
                  </padding>
                  <Label text="Allocate Lecturer to Course" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                  
                  <HBox spacing="10">
                     <Label text="Lecturer:" minWidth="120"/>
                     <ComboBox fx:id="lecturerCombo" prefWidth="200" promptText="Select Lecturer"/>
                  </HBox>
                  
                  <HBox spacing="10">
                     <Label text="Course:" minWidth="120"/>
                     <ComboBox fx:id="courseCombo" prefWidth="200" promptText="Select Course"/>
                  </HBox>
                  
                  <Button text="Allocate" onAction="#handleAllocateLecturer" prefWidth="200"/>
                  <Label fx:id="allocateMessageLabel" textFill="green"/>
               </VBox>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Button text="Logout" onAction="#handleLogout"/>
      </HBox>
   </bottom>
</BorderPane>

