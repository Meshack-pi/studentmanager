<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" style="-fx-background: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentmanager.LoginController">
   <children>
      <!-- Login Card Container -->
      <VBox alignment="CENTER" maxHeight="450.0" maxWidth="350.0" prefHeight="450.0" prefWidth="350.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 5);">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <!-- Header Section -->
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Student Manager" />
                  <Label style="-fx-font-size: 16px; -fx-text-fill: #666666;" text="Sign in to your account" />
               </children>
            </VBox>
            
            <!-- Spacer -->
            <Region prefHeight="30.0" />
            
            <!-- Form Section -->
            <VBox spacing="20.0">
               <children>
                  <!-- Username Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Username" />
                        <TextField fx:id="usernameField" prefHeight="45.0" promptText="Enter your username" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10;">
                           <font>
                              <Font name="System Regular" size="14.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #555555;" text="Password" />
                        <PasswordField fx:id="passwordField" prefHeight="45.0" promptText="Enter your password" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10;">
                           <font>
                              <Font name="System Regular" size="14.0" />
                           </font>
                        </PasswordField>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Spacer -->
            <Region prefHeight="20.0" />
            
            <!-- Error Label -->
            <Label fx:id="errorLabel" style="-fx-font-size: 12px; -fx-font-weight: bold;" textFill="#dc3545" />
            
            <!-- Spacer -->
            <Region prefHeight="10.0" />
            
            <!-- Login Button -->
            <Button maxWidth="1.7976931348623157E308" onAction="#handleLogin" prefHeight="50.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;" text="Sign In">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.3" />
                     </color>
                  </DropShadow>
               </effect>
            </Button>
            
            <!-- Footer -->
            <Region prefHeight="20.0" />
            <Label style="-fx-font-size: 12px; -fx-text-fill: #999999;" text="Â© 2025 Student Management System" />
         </children>
      </VBox>
   </children>
</VBox>
