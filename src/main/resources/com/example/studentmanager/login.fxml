<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="150.0" prefWidth="160.0" spacing="10" style="-fx-background-color: #b59593;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.studentmanager.LoginController">
   <VBox prefHeight="58.0" prefWidth="269.0" />
    <Label style="-fx-font-size: 18px;" text="Login" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" prefHeight="26.0" prefWidth="142.0" promptText="Password" />
    <Button onAction="#handleLogin" text="Login" textAlignment="CENTER" textFill="#0d0b0b" textOverrun="WORD_ELLIPSIS">
      <font>
         <Font name="Avenir Next Condensed Demi Bold" size="14.0" />
      </font></Button>
    <Label fx:id="errorLabel" textFill="red" />
</VBox>
